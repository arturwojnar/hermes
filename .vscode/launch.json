  "version": "0.2.0",
  "configurations": [
    {
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "name": "rabbitmq-one-partition-semaphore",
      "program": "${workspaceFolder}/examples/rabbitmq-one-partition-semaphore.ts",
      "request": "launch",
      "restart": true,
      "runtimeExecutable": "${workspaceFolder}/examples/node_modules/.bin/nodemon",

      "skipFiles": ["<node_internals>/**"],
      "type": "node",
      "outputCapture": "std"
    },
    {
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "name": "pulsar-one-partition-mutex",
      "preLaunchTask": "npm: build",
      "program": "${workspaceFolder}/examples/pulsar-one-partition-mutex.ts",
      "request": "launch",
      "restart": true,
      "runtimeExecutable": "${workspaceFolder}/examples/node_modules/.bin/nodemon",

      "skipFiles": ["<node_internals>/**"],
      "type": "node",
      "outputCapture": "std"
    },
    {
      "args": [
        "-c",
        "${workspaceFolder}/jest.config.js",
        "--maxConcurrency=1",
        "--detectOpenHandles",
        "--colors",
        "--verbose"
      ],
      "internalConsoleOptions": "neverOpen",
      "console": "integratedTerminal",
      "name": "test",
      "program": "${workspaceRoot}/node_modules/.bin/jest",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "type": "node"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "postgres test",
      "runtimeExecutable": "node",
      "runtimeArgs": ["--experimental-vm-modules"],
      "program": "${workspaceRoot}/node_modules/.bin/jest",
      "cwd": "${workspaceFolder}/packages/hermes-postgresql",
      "args": [
        "--colors",
        "--verbose",
        "--runInBand",
        "--forceExit",
        "--detectOpenHandles",
        "--config",
        "jest.config.js"
      ],
      "console": "integratedTerminal",
      "env": {
        "NODE_OPTIONS": "--experimental-vm-modules",
        "NODE_ENV": "test"
      }
    },
    {
      "cwd": "${workspaceFolder}/packages/hermes-postgresql",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "name": "postgres",
      "program": "${workspaceFolder}/packages/hermes-postgresql/index.ts",
      "request": "launch",
      "preLaunchTask": "npm: build:postgres",
      "restart": true,
      "runtimeExecutable": "${workspaceFolder}/examples/node_modules/.bin/nodemon",
      "skipFiles": ["<node_internals>/**"],
      "type": "node",
      "outputCapture": "std"
    }
  ]
}
