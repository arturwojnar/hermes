{
  "name": "@arturwojnar/hermes-mongodb",
  "version": "1.0.0-alpha.0",
  "description": "Production-Ready TypeScript Outbox Pattern for MongoDB",
  "scripts": {
    "build": "rollup -c",
    "build:ts": "tsc -p tsconfig.build.json",
    "clean": "rm -rf ./lib/",
    "lint:eslint": "eslint 'src/**/*.ts'",
    "lint:prettier": "prettier --check \"**/**/!(*.d).{ts,json,md}\"",
    "lint-fix": "eslint --fix -f unix \"src/**/*.{ts,tsx}\"",
    "prepare": "husky install",
    "test": "node --experimental-vm-modules ../../node_modules/.bin/jest --colors --coverage --verbose --maxConcurrency=5 --config=jest.config.cjs",
    "typecheck": "tsc --noEmit",
    "typedoc": "typedoc"
  },
  "keywords": [
    "outbox",
    "mongo",
    "mongodb",
    "microservices",
    "messaging",
    "transactional",
    "events"
  ],
  "author": {
    "name": "Artur Wojnar",
    "email": "contact@arturwojnar.dev"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arturwojnar/hermes.git",
    "directory": "packages/hermes-mongodb"
  },
  "bugs": {
    "url": "https://github.com/arturwojnar/hermes/issues"
  },
  "homepage": "https://hermes.arturwojnar.dev",
  "exports": {
    ".": {
      "import": {
        "types": "./lib/index.d.mts",
        "default": "./lib/index.mjs"
      },
      "require": {
        "types": "./lib/index.d.ts",
        "default": "./lib/index.js"
      }
    }
  },
  "type": "module",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "lib"
  ],
  "publishConfig": {
    "access": "public"
  },
  "license": "ISC",
  "devDependencies": {
    "@jest/globals": "~29.7.0",
    "@microsoft/tsdoc": "~0.14.2",
    "@microsoft/tsdoc-config": "~0.16.2",
    "@rollup/plugin-commonjs": "~25.0.7",
    "@rollup/plugin-json": "~6.1.0",
    "@rollup/plugin-node-resolve": "~15.2.3",
    "@rollup/plugin-typescript": "~11.1.6",
    "@types/jest": "~29.5.12",
    "@types/node": "~20.11.30",
    "@typescript-eslint/eslint-plugin": "~7.3.1",
    "@typescript-eslint/parser": "~7.3.1",
    "ajv": "~8.12.0",
    "eslint": "~8.57.0",
    "eslint-config-prettier": "~9.1.0",
    "eslint-plugin-import": "~2.29.1",
    "eslint-plugin-node": "~11.1.0",
    "eslint-plugin-prettier": "~5.1.3",
    "eslint-plugin-tsdoc": "~0.2.17",
    "husky": "~9.0.11",
    "jest": "~29.7.0",
    "lint-staged": "~15.2.2",
    "mongodb-memory-server": "~9.1.7",
    "mongoose": "~8.2.3",
    "nodemon": "~3.1.0",
    "prettier": "~3.2.5",
    "prettier-eslint": "~16.3.0",
    "rollup": "~4.13.0",
    "ts-essentials": "~9.4.1",
    "ts-jest": "~29.1.2",
    "ts-node": "~10.9.2",
    "typedoc": "~0.25.12",
    "typescript": "~5.4.3"
  },
  "dependencies": {
    "mongodb": "~6.5.0"
  },
  "peerDependencies": {
    "@arturwojnar/hermes": ">=1.0.0-alpha.0"
  }
}
