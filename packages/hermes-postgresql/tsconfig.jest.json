{
  "extends": "./tsconfig.json",
  "include": ["./src/**/*", "./test/**/*"],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "module": "NodeNext",
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "paths": {
      "@arturwojnar/hermes": ["../hermes"],
      "@arturwojnar/hermes-postgresql": ["./"]
    }
  },
  "references": [
    {
      "path": "../hermes/"
    }
  ]
}
