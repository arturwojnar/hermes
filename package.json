{
  "name": "hermes",
  "version": "1.0.0",
  "description": "Production-Ready TypeScript Outbox Pattern",
  "main": "lib/index.js",
  "files": [
    "lib/**/*"
  ],
  "types": "lib/index.d.ts",
  "engines": {
    "node": ">=20.9.0"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/",
    "cache": "~/.npm"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:arturwojnar/hermes.git"
  },
  "bugs": {
    "url": "https://github.com/ryansonshine/arturwojnar/hermes/issues"
  },
  "homepage": "https://github.com/ryansonshine/arturwojnar/hermes#readme",
  "scripts": {
    "prepare": "husky install",
    "build": "npm run build:ts && npm run build --ws",
    "build:ts": "tsc -b",
    "test": "npm run test --ws",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "lint:prettier": "prettier --check \"**/**/!(*.d).{ts,json,md}\"",
    "lint:eslint": "eslint '**/*.ts'",
    "lint:fix": "eslint packages/**/*.{ts,tsx} --fix",
    "fix:prettier": "prettier --write \"**/**/!(*.d).{ts,json,md}\"",
    "typedoc": "npm run typedoc --ws",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "author": {
    "name": "Artur Wojnar",
    "email": "contact@arturwojnar.dev"
  },
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "~19.2.0",
    "@commitlint/config-conventional": "~19.1.0",
    "@microsoft/tsdoc": "~0.14.2",
    "@microsoft/tsdoc-config": "~0.16.2",
    "@semantic-release/changelog": "~6.0.3",
    "@semantic-release/git": "~10.0.1",
    "@semantic-release/github": "10.0.2",
    "@types/jest": "~29.5.12",
    "@types/node": "~20.11.29",
    "@types/sinon": "~17.0.3",
    "@typescript-eslint/eslint-plugin": "~7.3.0",
    "@typescript-eslint/parser": "~7.3.0",
    "ajv": "~8.12.0",
    "conventional-changelog-conventionalcommits": "~7.0.2",
    "eslint": "~8.57.0",
    "eslint-config-prettier": "~9.1.0",
    "eslint-plugin-node": "~11.1.0",
    "eslint-plugin-prettier": "~5.1.3",
    "eslint-plugin-tsdoc": "~0.2.17",
    "husky": "~9.0.11",
    "jest": "~29.7.0",
    "lint-staged": "~15.2.2",
    "nodemon": "~3.1.0",
    "prettier": "~3.2.5",
    "prettier-eslint": "~16.3.0",
    "semantic-release": "~23.0.5",
    "ts-essentials": "~9.4.1",
    "ts-jest": "~29.1.2",
    "ts-node": "~10.9.2",
    "tsc-alias": "~1.8.8",
    "typedoc": "~0.25.12",
    "typedoc-plugin-markdown": "~3.17.1",
    "typescript": "~5.4.2",
    "vitepress": "~1.0.0-rc.45"
  },
  "private": true,
  "workspaces": [
    "packages/hermes",
    "packages/hermes-mongodb"
  ],
  "dependencies": {
    "tsconfig-paths": "~4.2.0"
  }
}
